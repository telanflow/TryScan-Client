{
    "name": "Tsc",
    "version": "1.3.0",
    "manifest_version": 3,
    "description": "TryScan Chrome插件",
    "permissions": [
        "tabs",
        "cookies",
        "webRequest",
        "background",
        "storage",
        "declarativeContent",
        "declarativeNetRequest",
        "declarativeNetRequestFeedback"
    ],
    "host_permissions": [
        "http://*/*", 
        "https://*/*",
        "*://*/*"
    ],
    "icons": { 
        "48": "image/icon.png",
        "128": "image/icon128.png"
    },
    "action": {
        "default_icon":"image/icon.png",
        "default_popup":"popup.html"
    },
    "background": {
        "service_worker": "js/background.js"
    }
}